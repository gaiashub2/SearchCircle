<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%= form_for(group) do |form| %>
      <% if group.errors.any? %>
        <div id="error_explanation">
          <div class='alert alert-danger'><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</div>

          <ul>
          <% group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :name ,'団体名'%>
        <%= form.text_field :name ,class: 'form-control'%>
      </div>

      <div class="field">
        <%= form.label :captain_name ,'代表者氏名'%>
        <%= form.text_field :captain_name ,class: 'form-control'%>
      </div>

      <div class="field">
        <%= form.label :email ,'団体メールアドレス'%>
        <%= form.email_field :email ,class: 'form-control'%>
      </div>
      
      <div class="field">
        <%= form.label :tel ,'電話番号'%>
        <%= form.text_field :tel ,class: 'form-control'%>
      </div>

      <div class="field">
        <%= form.label :password,"パスワード" %>
        <%= form.password_field :password ,class: 'form-control' %>
      </div>

      <div class='field'>
        <%= form.label :password_confirmation,"パスワード確認" %>
        <%= form.password_field :password_confirmation ,class: 'form-control' %>
      </div>


      <div class="actions">
        <%= form.submit class: "btn btn-primary"%>
      </div>
    <% end %>

  </div>
</div>